<style>
h2 {
  text-align: center;
  padding: 20px 0;
}

.table-bordered {
  border: 1px solid #ddd !important;
}

table caption {
	padding: .5em 0;
}

  table caption {
    display: none;
  }


.p {
  text-align: center;
  padding-top: 140px;
  font-size: 14px;
}

td{
    color: #ffff;
}

th{
    color: #ffff;
}
</style>


<body class="PropertyListBody">
<h1 class="whiteText" style="text-align:center;">Property</h1>

<p>
        <button> <a class="whiteText" asp-action="Create">Create New</a></button>

</p>

        <table>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive" data-pattern="priority-columns">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                                        <th data-priority="1">@Html.DisplayNameFor(model => model.Description)s</th>
                                        <th data-priority="2">@Html.DisplayNameFor(model => model.Address)</th>
                                        <th data-priority="3">@Html.DisplayNameFor(model => model.UrlImages)</th>
                                        <th data-priority="4">@Html.DisplayNameFor(model => model.PriceifSale)</th>
                                        <th data-priority="5">@Html.DisplayNameFor(model => model.PriceifRent)</th>
                                        <th data-priority="6">@Html.DisplayNameFor(model => model.owner)</th>
                                        <th data-priority="6">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UrlImages)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PriceifSale)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.PriceifRent)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.owner.Name)
                                            </td>
                                            <td>
                                                <button><a asp-action="Edit" asp-route-id="@item.Id" class="whiteText">Edit</a></button>
                                            <button><a asp-action="Details" asp-route-id="@item.Id" class="whiteText">Details</a></button>
                                            <button><a asp-action="Delete" asp-route-id="@item.Id" class="whiteText">Delete</a></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div><!--end of .table-responsive-->
                    </div>
                </div>
            </div>
        </table>



