<div class="propertyHeader">
    <div class="container-property-header">
        <img class="propertyImage" src="~/lib/img/propertyImage.png">
        <h1 class="centered">Find a place you can call Home</h1>
    </div>
</div>
<body class="propertyBody">

<div class="container py-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
                    <section class="articles">
                        <article>
                            <div class="article-wrapper">
                                <figure>
                                    <img src="@Html.DisplayFor(modelItem => item.UrlImages)" alt="" />
                                </figure>
                                <div class="article-body">
                                    <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                                    <p>
                                        Address: @Html.DisplayFor(modelItem => item.Address)
                                    </p>
                                    <p>
                                        Owner: @Html.DisplayFor(modelItem => item.Address)
                                    </p>
                                    <div class="row about-list">
                                    <div class="col-md-6">
                                        <div class="media">
                                            <label>Sale Price:</label>
                                                <p>₱@Html.DisplayFor(modelItem => item.PriceifSale)</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="media">
                                            <label>Rent Price:</label>
                                                <p>₱@Html.DisplayFor(modelItem => item.PriceifRent)</p>
                                        </div>
                                    </div>
                                    </div>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="read-more">
                                        Details <span class="sr-only">about this is some title</span>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                    
                                </div>
                            </div>
                        </article>
                    </section>
