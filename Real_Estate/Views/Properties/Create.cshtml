@model Real_Estate.Models.Property

@{
    ViewData["Title"] = "Create";
}

<head>
    <!-- Design by foolishdeveloper.com -->
    <title>Glassmorphism login Form Tutorial in html css</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="C:\Users\COLLABERA\Desktop\Capstone01\Real_Estate\wwwroot\css\site.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <!--Stylesheet-->
</head>
<body class="propertyBody">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
                <h3 class="whiteText">Create Property</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="Name" class="whiteText"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Description" class="whiteText"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Address" class="whiteText"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="UrlImages" class="whiteText"></label>
                <input asp-for="UrlImages" class="form-control" />
                <span asp-validation-for="UrlImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="PriceifSale" class="whiteText"></label>
                <input asp-for="PriceifSale" class="form-control" />
                <span asp-validation-for="PriceifSale" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="PriceifRent" class="whiteText"></label>
                <input asp-for="PriceifRent" class="form-control" />
                <span asp-validation-for="PriceifRent" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="ownerID" class="whiteText"></label>
                <select asp-for="ownerID" class ="form-control" asp-items="ViewBag.ownerID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                    <a asp-action="Index" class="whiteText">Back to List</a>
            </div>
        </form>
    </div>
</div>
</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
