<body class="PropertyListBody">
    <h1 class="whiteText" style="text-align:center;">All Users</h1>

    <table>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive" data-pattern="priority-columns">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Age</th>
                                    <th>Date of Birth</th>
                                    <th>Phone Number</th>
                                    <th>Address</th>
                                    <th>URL Image</th>
                                    <th>Email</th>
                                    <th>User Name</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var users in Model)
                                {
                                    <tr>
                                        <td>@users.Name</td>
                                        <td>@users.Age</td>
                                        <td>@users.DOB</td>
                                        <td>@users.Address</td>
                                        <td>@users.PhoneNumber</td>
                                        <td>@users.UrlImages</td>
                                        <td>@users.Email</td>
                                        <td>@users.UserName</td>


                                        <td>
                                            <button><a asp-controller="Users" asp-action="Details" asp-route-userId="@users.Id" class="whiteText">Details</a></button>
                                            <button><a asp-controller="Users" asp-action="Update" asp-route-userId="@users.Id" class="whiteText">Update</a></button>
                                            <button><a asp-controller="Users" asp-action="Delete" asp-route-userId="@users.Id" class="whiteText">Delete</a></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!--end of .table-responsive-->
                </div>
            </div>
        </div>
    </table>
</body>
