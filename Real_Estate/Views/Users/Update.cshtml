@using Real_Estate.ViewModels;
@model EditUserViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Edit User</h1>

<form class="forms" asp-controller="Users" asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div>
        <label asp-for="Name">Full Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" />
        <span asp-validation-for="Age"></span>
    </div>
    <div>
        <label asp-for="DOB">Date of Birth</label>
        <input asp-for="DOB" />
        <span asp-validation-for="DOB"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label asp-for="UrlImages"></label>
        <input asp-for="UrlImages" />
        <span asp-validation-for="UrlImages"></span>
    </div>
    <div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                <h4>User Roles</h4>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            // manage roles for user
                            <li class="list-group-item">@role</li>
                        }
                    }
                    else
                    {
                        <h6>No roles</h6>
                    }
                </ul>
                <a asp-action="ManageRoles" asp-controller="Account" asp-route-userId="Id">Manage roles</a>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="ChangePassword" asp-controller="Users" asp-route-userId="Id">Change Password</a>
    </div>

    <button type="submit">Edit</button>
</form>