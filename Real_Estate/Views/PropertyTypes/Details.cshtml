@model Real_Estate.Models.PropertyTypes

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <!-- Design by foolishdeveloper.com -->
    <title>Glassmorphism login Form Tutorial in html css</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    @*    <link href="~/css/site.css" rel="stylesheet" />*@
    <!--Stylesheet-->

</head>

<body class="login-register-Body">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <h3 class="whiteText">Details of Property Type</h3>

                <label for="username" class="whiteText">Name:</label>
                <h2 class="whiteText">@Html.DisplayFor(model => model.Name)</h2>



                <label for="password" class="whiteText">Description:</label>
                <h2 class="whiteText">@Html.DisplayFor(model => model.Description)</h2>

                <div class="buttonDiv">
                    <button asp-action="Edit" asp-route-id="@Model?.Id" class="whiteText">Edit</button>
                </div>
                <div class="buttonDiv">
                    <a asp-action="Index" class="whiteText">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</body>


